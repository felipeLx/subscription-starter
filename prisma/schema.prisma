// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(cuid())
  full_name String
  billing_address Json
  payment_method Json
}

model Customers {
  id String @id @default(cuid())
  stripe_customer_id String
}

model Products {
  id String @id
  active Boolean
  name String
  description String
  image String
  metadata Json

}
model Country {
  id      String @id @default(cuid())
  country String
  flag    String

  banks  Bank[]
}

model Bank {
  id   String @id @default(cuid())
  name String
  logo String

  country   Country @relation(fields: [countryId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  countryId String

  payment Payment[]
}

model Payment {
  id          String  @id @default(cuid())
  type        String
  symbol      String
  limits      String?
  information String?

  bank   Bank   @relation(fields: [bankId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  bankId String

  steps Steps[]
}

model Steps {
  id       String  @id @default(cuid())
  st1_pic  String?
  st1_text String?
  st2_pic  String?
  st2_text String?
  st3_pic  String?
  st3_text String?
  st4_pic  String?
  st4_text String?
  st5_pic  String?
  st5_text String?
  st6_pic  String?
  st6_text String?

  payment   Payment @relation(fields: [paymentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  paymentId String
}
